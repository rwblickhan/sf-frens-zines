---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="zines by sf frens" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    /* https://modernfontstacks.com */
    font-family: "Segoe Print", "Bradley Hand", Chilanka, TSCu_Comic, casual,
      cursive;
    font-weight: normal;
    -webkit-text-stroke: 1pt black;
    font-size: xx-large;
    background: linear-gradient(to bottom, #ff6699, #ff99cc);
    height: 100vh;
  }
</style>
